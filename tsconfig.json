{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2017", "es7", "es6", "dom"],
    "resolveJsonModule": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "./src"
  },
  "includes": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}